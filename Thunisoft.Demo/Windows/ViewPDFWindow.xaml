<Window x:Class="Thunisoft.Demo.Windows.ViewPDFWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thunisoft.Demo.Windows"
        xmlns:moonPdfLib="clr-namespace:MoonPdfLib;assembly=MoonPdfLib"
        mc:Ignorable="d"
        Title="ViewPDFWindow" Height="450" Width="800">
    <Grid>
        <moonPdfLib:MoonPdfPanel  Grid.Row="1" x:Name="PDFViewer" ViewType="SinglePage" PageMargin="0,2,4,2" Background="LightGray" ScrollViewer.HorizontalScrollBarVisibility="Auto" PageRowDisplay="ContinuousPageRows" />
    </Grid>
</Window>
